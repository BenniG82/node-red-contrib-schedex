    },
    "node-red": {
        "nodes": {
            "schedex": "index.js"
        }
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true,
            "mocha": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "overrides": [
            {
                "files": [
                    "*.js"
