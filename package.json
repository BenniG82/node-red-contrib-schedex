                "rules": {
                    "func-names": "off",
                    "max-lines-per-function": "off",
                    "global-require": "off",
                    "no-plusplus": "off",
                    "no-param-reassign": "off",
                    "no-console": "off",
                    "no-multi-assign": "off"
                }
            }
        ]
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 96
    },
    "nyc": {
        "exclude": "tests/**"
    }
