    },
    "dependencies": {
        "lodash": "^4.17.11",
        "moment": "^2.24.0",
        "suncalc": "^1.8.0"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "eslint": "^5.13.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-import": "^2.16.0",
        "markdown-to-html": "0.0.13",
        "mocha": "^5.2.0",
        "node-red-contrib-mock-node": "^0.4.0",
